{% include '_header.html.twig' %}
<body>
<main>


    <div class="flex">
        {% for article in articles %}
            {% if article.published %}
            <article class="article">
                {#
                Je génère un lien vers la route articleShow.
                Cette route demande une wildcard 'id', donc je la renseigne
                avec l'id de l'article qui est actuellement en train d'être bouclé.
                #}
                <a href={{ path('articleShow', {'id': article.id}) }}>
                    <h2>{{ article.title }}</h2>
                </a>
                <p>{{ article.content }}</p>
            </article>
            {% endif %}
        {% endfor %}

    </div>
</main>
